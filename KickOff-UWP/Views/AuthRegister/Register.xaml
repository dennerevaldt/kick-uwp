<Page
    x:Class="KickOff_UWP.Views.AuthRegister.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KickOff_UWP.Views.AuthRegister"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar Background="DarkGreen">
            <AppBarButton Label="Salvar" Icon="Save" Click="SaveNewUser" x:Name="AddItemAppBarBtn" Foreground="White"></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid Background="#fff">
        <Pivot Title="Cadastrar-se" Foreground="DarkGreen" Name="PivotUser" SelectionChanged="PivotUser_SelectionChanged">
            <PivotItem Name="PivotItemEnterprise">
                <PivotItem.Header>
                    <TextBlock Text="Empresa" />
                </PivotItem.Header>
                <StackPanel Orientation="Vertical">
                    <TextBox Name="txtBoxEnterpriseFullname" PlaceholderText="Nome completo" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxEnterpriseEmail" PlaceholderText="E-mail" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxEnterpriseUsername" PlaceholderText="Usuário" Margin="0 0 0 10" />
                    <PasswordBox Name="txtBoxEnterprisePwd" PlaceholderText="Senha" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxEnterpriseTelephone" PlaceholderText="Telefone" Margin="0 0 0 10" InputScope="TelephoneNumber" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <AutoSuggestBox
                            Name="AutoSugCityEnterprise" 
                            QueryIcon="Find" 
                            PlaceholderText="Pesquise sua cidade/estado"  
                            TextChanged="AutoSuggestBox_TextChanged" 
                            DisplayMemberPath="description"
                            SuggestionChosen="AutoSuggestBox_SuggestionChosen" />

                            <RelativePanel
                                Name="PlaceDetailsEnterprise"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Visibility="Collapsed">
                           
                                <TextBlock
                                    Name="PlaceNameEnterprise"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                           
                            </RelativePanel>

                            <TextBlock
                                Name="NoResultsEnterprise"
                                Text="Nenhum resultado encontrado"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Grid.Row="2"
                                Visibility="Collapsed" />
                    </Grid>

                    <Grid HorizontalAlignment="Center" Margin="20">
                        <StackPanel Orientation="Horizontal">
                            <ProgressRing Name="prgLoadEn" Height="15" Width="15" Foreground="White" Margin="0 0 15 0" />
                            <TextBlock Name="txtBlockLoadEn" Text="Carregando..." Foreground="White" VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </PivotItem>

            <PivotItem Name="PivotItemPlayer">
                <PivotItem.Header>
                    <TextBlock Text="Jogador" />
                </PivotItem.Header>
                <StackPanel Orientation="Vertical">
                    <TextBox Name="txtBoxPlayerFullname" PlaceholderText="Nome completo" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxPlayerEmail" PlaceholderText="E-mail" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxPlayerUsername" PlaceholderText="Usuário" Margin="0 0 0 10" />
                    <PasswordBox Name="txtBoxPlayerPwd" PlaceholderText="Senha" Margin="0 0 0 10" />
                    <TextBox Name="txtBoxPlayerPosition" PlaceholderText="Posição" Margin="0 0 0 10" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <AutoSuggestBox
                            Name="AutoSugCityPlayer" 
                            QueryIcon="Find" 
                            PlaceholderText="Pesquise sua cidade/estado"  
                            TextChanged="AutoSuggestBox_TextChanged" 
                            DisplayMemberPath="description"
                            SuggestionChosen="AutoSuggestBox_SuggestionChosen" />

                        <RelativePanel
                                Name="PlaceDetailsPlayer"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Visibility="Collapsed">

                            <TextBlock
                                    Name="PlaceNamePlayer"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />

                        </RelativePanel>

                        <TextBlock
                                Name="NoResultsPlayer"
                                Text="Nenhum resultado encontrado"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Grid.Row="2"
                                Visibility="Collapsed" />
                    </Grid>

                    <Grid HorizontalAlignment="Center" Margin="20">
                        <StackPanel Orientation="Horizontal">
                            <ProgressRing Name="prgLoadPl" Height="15" Width="15" Foreground="Gray" Margin="0 0 15 0"/>
                            <TextBlock Name="txtBlockLoadPl" Text="Carregando..." Foreground="Gray" VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
